<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.tanfra.shopmob.smob.ui.admin.AdminViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGroupListEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondaryLightColor">

            <EditText
                android:id="@+id/smobGroupMemberUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:layout_marginStart="@dimen/horiz_margin_small"
                android:layout_marginTop="@dimen/vert_margin_small"
                android:layout_marginEnd="@dimen/horiz_margin_small"
                android:hint="@string/smob_group_member_username"
                android:autofillHints="@string/smob_group_member_username"
                android:inputType="textCapSentences|textAutoCorrect"
                android:text="@={viewModel.smobGroupName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/smobGroupMemberName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:layout_marginStart="@dimen/horiz_margin_small"
                android:layout_marginTop="@dimen/vert_margin_small"
                android:layout_marginEnd="@dimen/horiz_margin_small"
                android:gravity="start"
                android:hint="@string/smob_group_member_name"
                android:autofillHints="@string/smob_group_member_name"
                android:inputType="textCapSentences|textAutoCorrect"
                android:lines="10"
                android:text="@={viewModel.smobGroupDescription}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/smobGroupMemberUsername"
                />

            <!--
            <Spinner
                android:id="@+id/smobGroupType"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="?attr/dropdownListPreferredItemHeight"
                android:layout_margin="@dimen/margin_standard"
                android:layout_marginStart="@dimen/horiz_margin_small"
                android:layout_marginTop="@dimen/vert_margin_small"
                android:layout_marginEnd="@dimen/horiz_margin_small"
                android:prompt="@string/smob_group_type"
                android:background="@drawable/spinner_bg"
                android:dropDownWidth="match_parent"
                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                android:paddingEnd="14dp"
                android:popupBackground="@drawable/spinner_bg"
                android:popupElevation="3dp"
                android:stateListAnimator="@drawable/spinner_sla"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/smobGroupMemberName"
                tools:ignore="RtlSymmetry" />
            -->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/saveSmobGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                app:fadeVisible="@{!viewModel.showLoading.booleanValue()}"
                android:src="@drawable/ic_save"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|right|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/save_smob_group" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:fadeVisible="@{viewModel.showLoading.booleanValue()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
